    <div class="header text-center my-3">
      <h1>Foods To Add To Your Gym Diet Plan</h1>
    </div>
    <div class="row food-div" align="center">
      {{#each info}}
        <div class="col-lg-4 my-2">
          <img class="shoe-image" src={{img}} alt="" />
          <p>
            {{name}}
            <br />

            Calories-{{calories}}<br />
            Carbohybrates-
            {{carbohybrates}}<br />
            Protein-{{protein}}
          </p>
          <form action="/addToDiet" method="post">
            <input type="hidden" value="{{caloriesInVal}}" name="calories" />
            <input type="hidden" value="{{name}}" name="name" />
            <input type="hidden" value="{{img}}" name="img" />
            <button type="submit" class="btn btn-dark" id="addTo" onclick="clicked">Add To
              Diet</button>
          </form>

        </div>
      {{/each}}
    </div>
