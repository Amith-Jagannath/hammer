<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/assets/todoStyle.css" />
    <title>Document</title>
  </head>
  <body>
    <header>
      <h1>Tasks</h1>
      <form id="new-form" method="post" action="/addTask">
        <input
          type="text"
          id="new-input"
          placeholder="What have you planned"
          name="desc"
        />
        <input type="submit" id="new-submit" value="Add task" />
      </form>
    </header>
    <main>
      <section class="task-list">
        <h2>Tasks</h2>
        <div id="tasks">

          {{#each info}}
            <div class="task">
              <div class="content">
                <input
                  type="text"
                  class="text"
                  value="{{description}}"
                  readonly
                />
              </div>
              <div class="actions">
                {{! <button class="edit">Edit</button> }}
                <form action="/delete" method="post">
                  {{! <button class="delete">Delete</button> }}
                  <input type="hidden" name="desc_id" value="{{desc_id}}" />
                  <input type="submit" value="Delete" />
                </form>
              </div>
            </div>
          {{/each}}
        </div>
      </section>
    </main>
  </body>
  <script src="todo.js"></script>
</html>